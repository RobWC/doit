{% extends "base.j2" %}
{% block content %}
  <div class="col-xs-12">
    <div class="widget-box">
      <div class="widget-title">
        <span class="icon">
          <i class="fa fa-th"></i>
        </span>
        <h5>Groups</h5>
      </div>
      <div class="widget-content nopadding">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
          {% for key,value in groupVars.iteritems() %}
            <tr>
              <td>{{ key }}</td>
              <td>{{ value }}</td>
            </tr>
          {% endfor %}    
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}