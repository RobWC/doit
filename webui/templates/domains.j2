{% extends "base.j2" %}
{% block content %}
  <div class="col-xs-12">
    <div class="widget-box">
      <div class="widget-title">
        <span class="icon">
          <i class="glyphicon glyphicon-th"></i>
        </span>
        <h5>Domains</h5>
        <div class="buttons">
          <button type="button" data-toggle="modal" data-target="#pageModal">
            <i class="glyphicon glyphicon-plus"></i>
          </button>
        </div>
      </div>
      <div class="widget-content nopadding">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          {% for value in domainList %}
            <tr data-value="{{ value[0] }}" data-id="{{ value[1] }}">
              <td>{{ value[0].title() }} </td>
              <td style="text-align: right; width: 20%;">
                <button id="editDomain" type="button">
                  <i class="glyphicon glyphicon-edit"></i>
                </button>
                <button id="deleteDomain{{ value[1] }}" type="button">
                  <i class="glyphicon glyphicon-minus"></i>
                </button>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

{% endblock %}

{% block modal_content %}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="modalLabel">Add New Domain</h4>
  </div>
  <div class="modal-body">
    <div class="input-group">
      <span class="input-group-addon">Domain Name</span>
      <input id="domainName"type="text" class="form-control">
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button id="saveNewDomain" type="button" class="btn btn-primary">Save</button>
  </div>
{% endblock %}

{% block pageScripts %}
  <!-- scripts local to this page -->
  <script type="text/javascript" src="js/pages/domains.js"></script>
{% endblock %}